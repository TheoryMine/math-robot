
## targets

default: tm_initial
images: tm_initial
test: tm_initial

all: images test


## global settings

## ISABELLE_TOOL = /Applications/Isabelle2009-2.app/Isabelle/bin/isabelle

HEAPNAME = tm_initial_$(SHORT_HOSTNAME)
SRC = $(ISABELLE_HOME)/src
OUT = $(ISABELLE_OUTPUT)
LOG = $(OUT)/log

USEDIR = $(ISABELLE_TOOL) usedir -v true -i false -g false -p 1 -b -s $(HEAPNAME)

## tm_initial

tm_initial: $(LOG)/HOL-tm_initial.gz

$(LOG)/HOL-tm_initial.gz: ROOT.ML *.thy *.ML
	@$(USEDIR) HOL_IsaP tm_initial
	mv -f $(ISABELLE_OUTPUT)/tm_initial $(ISABELLE_OUTPUT)/$(HEAPNAME)


## clean

clean:
	@rm -f $(LOG)/HOL-tm_initial.gz
